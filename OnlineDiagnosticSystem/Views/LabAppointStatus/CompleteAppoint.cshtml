@model IEnumerable<DatabaseLayer.LabAppointTable>

@{
    ViewBag.Title = "Lab Appoint";
}
<h2>Complete Appointment's</h2>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>

<div class="card shadow mb-4">
    <div class="card header py-3">
        <input type="text" id="search" name="search" class="form-control col-md-3" style="float:right;" placeholder="search here" />
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover" id="dataTable" width="100%" cellspacing="10">
                <thead>
                    <tr>
                        <th>
                            Lab
                        </th>
                        <th>
                            Test
                        </th>
                        <th>
                            Date
                        </th>
                        <th>
                            Time
                        </th>
                        <th>
                            Patient
                        </th>
                        <th>
                            Transection No
                        </th>
                        <th>
                            Reason
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="searchvalue">
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.LabTable.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LabTestTable.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AppointDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LabTimeSlotTable.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PatientTable.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TransectionNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            <h4 class="bold" style="color:blue">Complete</h4>
                        </td>
                        <td>
                            @Html.ActionLink("Print Report", "ViewDetails", "LabApprove", new { id = item.LabAppointID }, new { @class = "generic-btn info" })

                        </td>
                    </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#search").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#searchvalue tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });

</script>
