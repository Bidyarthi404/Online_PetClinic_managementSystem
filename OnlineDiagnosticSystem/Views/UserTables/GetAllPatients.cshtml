@model IEnumerable<DatabaseLayer.UserTable>

@{ ViewBag.Title = "GetAllPatients"; }

<h2>GetAllPatients</h2>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<div class="card header py-3">
</div>
<div class="card shadow mb-4">
    <input type="text" id="search" name="search" class="form-control col-md-3" style="float:right;" placeholder="search here" />
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover" id="dataTable" width="100%" cellspacing="10">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.UserName)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ContactNo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.isVerified)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserTypeTable.UserType)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="searchvalue">
                    @foreach (var item in Model)
                    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isVerified)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserTypeTable.UserType)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.UserID }, new { @class = "btn btn-primary btn-sm", style = "text-decoration:none; margin-right: 10px;" })
            </td>
        </tr>}

                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">$(document).ready(function () {
        $("#search").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#searchvalue tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });</script>