@model IEnumerable<DatabaseLayer.DoctorTable>

@{
    ViewBag.Title = "Doctors";
}

<h2>All Doctors</h2>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<div class="card header py-3">
   
</div>
<div class="card shadow mb-4">
    <input type="text" id="search" name="search" class="form-control col-md-3" style="float:right;" placeholder="search here" />
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover" id="dataTable" width="100%" cellspacing="10">
                <thead>
                    <tr>
                        <th>
                            Doctor
                        </th>
                        <th>
                           Photo
                        </th>
                        <th>
                            Fee
                        </th>
                        <th>
                            Phone No
                        </th>
                        <th>
                            Email Address
                        </th>
                        <th>
                            Specialization
                        </th>
                        <th>
                            Clinic Address
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="searchvalue">
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @{if (!string.IsNullOrEmpty(item.Photo))
                                {
                                    <img src="@Url.Content(item.Photo)" alt="Image" style="width:50px;height:50px;max-width: 100%; height: auto;" />
                                }
                            }
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Fees)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ClinicPhoneNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmailAddress)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Splztion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ClinicAddress)
                        </td>

                        <td>
                            @Html.ActionLink("Appointment", "DoctorAppointment", new { id = item.DoctorID }, new { @class = "generic-btn primary" })
                            @Html.ActionLink("Profile", "DoctorProfile", new { id = item.DoctorID }, new { @class = "generic-btn primary" })
                        </td>
                    </tr>
                    }
            </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#search").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#searchvalue tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });

</script>