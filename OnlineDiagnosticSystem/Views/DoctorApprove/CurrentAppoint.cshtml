@model IEnumerable<DatabaseLayer.DoctorAppointTable>

@{
    ViewBag.Title = "Pending";
}

<h2>Current Appointment's</h2>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>

<div class="card shadow mb-4">
    <div class="card header py-3">
        <input type="text" id="search" name="search" class="form-control col-md-3" style="float:right;" placeholder="search here" />
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover" id="dataTable" width="100%" cellspacing="10">
                <thead>
                    <tr>
                        <th>
                            Doctor
                        </th>
                        <th>
                            Time Slot
                        </th>
                        <th>
                            Patient
                        </th>
                        <th>
                            Appointment Date
                        </th>
                        <th>
                            Transection No
                        </th>
                        <th>
                            Reason
                        </th>

                        <th>
                            Status
                        </th>
                        <th>
                            Action's
                        </th>

                    </tr>
                </thead>
                <tbody id="searchvalue">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.DoctorTable.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DoctorTimeSlotTable.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PatientTable.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AppointDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TransectionNo)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>

                            <td>
                                <h4 class="bold" style="color:blue">Process</h4>
                            </td>
                            <td>
                                @Html.ActionLink("Process", "ProcessAppointment", new { id = item.DoctorAppointID }, new { @class = "generic-btn primary" })
                            </td>

                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#search").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#searchvalue tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });

</script>
